generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"

}

datasource db {
  provider = "postgresql"
}

enum Role {
  BUYER
  SELLER
  ADMIN
}

enum AssetStatus {
  ACTIVE
  INACTIVE
}

enum OrderStatus {
  PENDING
  PAID
  FAILED
}

model User {
  id    Int     @default(autoincrement()) @id
  auth0Id   String   @unique
  email     String   @unique
  role      Role
  createdAt DateTime @default(now())

  // Relations
  assets    Asset[]  @relation("SellerAssets")
  orders    Order[]  @relation("UserOrders")
}

model Asset {
  id    Int     @default(autoincrement()) @id
  title          String
  description    String
  price          Float
  category       String
  status         AssetStatus @default(ACTIVE)
  previewUrl     String      // public media
  privateFileKey String      // S3 key
  createdAt      DateTime    @default(now())

  // Relations
  sellerId Int
  seller   User     @relation("SellerAssets", fields: [sellerId], references: [id])
  orders   Order[]  @relation("AssetOrders")
}

model Order {
  id    Int     @default(autoincrement()) @id
  status          OrderStatus @default(PENDING)
  stripeSessionId String      @unique
  createdAt       DateTime    @default(now())

  // Relations
  userId  Int
  user    User   @relation("UserOrders", fields: [userId], references: [id])

  assetId Int
  asset   Asset  @relation("AssetOrders", fields: [assetId], references: [id])
}
