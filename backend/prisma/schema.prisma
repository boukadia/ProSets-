// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  BUYER
  SELLER
  ADMIN
}

enum AssetStatus {
  ACTIVE
  INACTIVE
  PENDING_REVIEW
}

enum OrderStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum AssetCategory {
  MODELS_3D
  CODE_SNIPPETS
  NOTION_TEMPLATES
  GRAPHICS
  VIDEOS
  OTHER
}

model User {
  id        Int      @id @default(autoincrement())
  auth0Id   String   @unique
  email     String   @unique
  name      String?
  avatar    String?
  role      Role     @default(BUYER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  assets    Asset[]  @relation("SellerAssets")
  orders    Order[]  @relation("UserOrders")

  @@map("users")
}

model Asset {
  id             Int           @id @default(autoincrement())
  title          String
  description    String        @db.Text
  price          Float
  category       AssetCategory
  status         AssetStatus   @default(PENDING_REVIEW)
  previewUrl     String        // Public S3 URL for preview
  previewImages  String[]      // Array of preview image URLs
  privateFileKey String        // Private S3 key for the actual file
  fileSize       Int?          // File size in bytes
  downloadCount  Int           @default(0)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  // Relations
  sellerId Int
  seller   User    @relation("SellerAssets", fields: [sellerId], references: [id], onDelete: Cascade)
  orders   Order[] @relation("AssetOrders")

  @@map("assets")
}

model Order {
  id              Int         @id @default(autoincrement())
  status          OrderStatus @default(PENDING)
  amount          Float
  stripeSessionId String?     @unique
  stripePaymentId String?     @unique
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Relations
  userId Int
  user   User @relation("UserOrders", fields: [userId], references: [id], onDelete: Cascade)

  assetId Int
  asset   Asset @relation("AssetOrders", fields: [assetId], references: [id], onDelete: Cascade)

  @@map("orders")
}

model DownloadLog {
  id          Int      @id @default(autoincrement())
  userId      Int
  assetId     Int
  downloadUrl String   // The presigned URL that was generated
  expiresAt   DateTime
  downloadedAt DateTime? // null if not downloaded yet
  createdAt   DateTime @default(now())

  @@map("download_logs")
}
